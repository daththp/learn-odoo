<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_academy_report_table_pivot" model="ir.ui.view">
             <field name="name">academy.report.pivot</field>
             <field name="model">academy.report</field>
             <field name="arch" type="xml">
                 <pivot string="Academy Analysis" >
                     <field name="student_id" type="measure"/>
                     <field name="class_id" type="measure"/>
                     <field name="date" type="row"/>
                 </pivot>
             </field>
        </record>

        <record id="view_academy_report_table_graph" model="ir.ui.view">
             <field name="name">academy.report.graph</field>
             <field name="model">academy.report</field>
             <field name="arch" type="xml">
                 <graph string="Academy Analysis" type="line" sample="1">
                     <field name="student_id" type="measure"/>
                 </graph>
             </field>
        </record>

        <record id="action_academy_report_table" model="ir.actions.act_window">
            <field name="name">Academy Analysis Table</field>
            <field name="res_model">academy.report</field>
            <field name="view_mode">pivot,graph</field>
        </record>
        <menuitem id="academy_report_table_menu" action="action_academy_report_table" parent="root_menu" sequence="17" />
    </data>
</odoo>
